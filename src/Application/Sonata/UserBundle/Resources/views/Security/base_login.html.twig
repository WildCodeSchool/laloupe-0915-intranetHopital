{% extends "::base.html.twig" %}

{% block stylesheets %} <link rel="stylesheet" href="{{ asset('bundles/iuch/css/help.css') }}"> {% endblock %}

{% block body %}
{% block fos_user_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">

                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'title_user_authentication'|trans({}, 'SonataUserBundle') }}</h2>
                </div>

                <div class="panel-body">

                    {% if error %}
                        <div class="alert alert-danger alert-error">{{ error|trans({"Bad credentials": "Nom d'utilisateur ou mot de passe incorrect"}) }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post" role="form"
                          class="form-horizontal">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <div class="form-group">
                            <label for="username"
                                   class="col-lg-3 col-sm-3 control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>

                            <div class="col-lg-6 col-sm-6"><input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" tabindex="1"/>
                            </div>
                             <div class="col-lg-3 col-sm-3">
                                <p class="help">
                                    <a href="#"><i class="fa fa-question-circle fa-2x"></i>
                                        <span>Veuillez entrer votre matricule</span>
                                    </a>
                                </p>
                            </div>
                        </div>

                        <div class="form-group control-group">
                            <label for="password"
                                   class="col-lg-3 col-sm-3 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            <div class="col-lg-6 col-sm-6"><input type="password" class="form-control" id="password" name="_password" required="required" tabindex="2"/></div>
                            <div class="col-lg-3 col-sm-3">
                                <p class="help">
                                    <a href="#"><i class="fa fa-question-circle fa-2x"></i><span>Lors de la 1Ã¨re connexion<br />veuillez utiliser votre date de naissance<br />(Ex: 010150)</span>
                                    </a>
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <div class="checkbox control-group">
                                    <label for="remember_me">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                        {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group control-group">
                            <div class="controls col-sm-offset-3 col-sm-9">
                                <a href="{{ path('fos_user_resetting_request') }}">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <input type="submit" id="_submit" name="_submit" class="btn btn-primary"
                                       value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" tabindex="3"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
{% endblock %}
