{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/iuch/css/tables.css') }}">
{% endblock %}

{%  block body %}

    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="flash-notice warning">
            {{ flash_message }}
        </div>
    {% endfor %}

    <div class="row row-fluid">
        <h1>Bienvenue {{ app.user.firstname }}</h1>

        <p>Lorem ipsum</p>
    </div>

    <div class="row row-fluid">
        <h3>Liste des chartes</h3>
        <table id="chartesTable" class="table table-hover tablesorter">
            <thead>
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Description
                </th>
                <th>
                    Service
                </th>
                <th>
                    Charte
                </th>
                <th>
                    Signature
                </th>
            </tr>
            </thead>
            <tbody>
                {% for charte in chartes %}
                    <tr>
                        <td scope="row">{{ charte.nom }}</td>
                        <td scope="row">{{ charte.description }}</td>
                        <td scope="row">{{ charte.service }}</td>
                        <td scope="row"><a href="{{ asset('bundles/iuch') }}{{ charte.path }}" target="_blank">{{ charte.filename }}</a></td>
                        {% if charte.signe == false %}
                            <td scope="row"><a href="{{ path('iuch_signature', {'charte_id':charte.idCharte }) }}">Signer la charte</a></td>
                        {% else %}
                            <td scope="row">Sign√© le {{ charte.dateSignature|date('d m Y') }}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('sonata_user_profile_edit') }}">Modifier le profile</a>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/iuch/js/jquery.tablesorter.min.js') }}"></script>
    <script>
        $(document).ready(function()
            {
                $("#chartesTable").tablesorter( {sortList: [[4,0],[0,0]]} );
            }
        );
    </script>
{% endblock %}