{% extends sonata_block.templates.block_base %}

{% block block %}

    <div id="dashboard" class="container">
        <h2>Pourcentage de signatures par chartes non obligatoires :</h2>
            <div>
                <canvas id="bar"></canvas>
            </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js"></script>
    <script type="text/javascript">
        $( document ).ready(function() {

            var data = {
                labels: [
                    {% for key,data in bar %}
                        "{{ key }}",
                    {% endfor %}
                ],
                datasets: [
                    {
                        label: "chartes",
                        fillColor: "rgba(207,231,221,0.5)",
                        strokeColor: "rgba(207,231,221,0.8)",
                        highlightFill: "rgba(207,231,221,0.75)",
                        highlightStroke: "rgba(207,231,221,1)",
                        data: [
                            {% for data in bar %}
                                "{{ data }}",
                            {% endfor %}
                        ]
                    }]
            };


            // Get context with jQuery - using jQuery's .get() method.
            var ctx = $("#bar").get(0).getContext("2d");
            // For a pie chart
            var myBarChart = new Chart(ctx).Bar(data, {
                responsive: true,
                barValueSpacing: 2,
                legendTemplate : '<ul class="<%=name.toLowerCase()%>-legend"><% for (var i=0; i<segments.length; i++){ %><li><span style="background-color:<%=segments[i].fillColor%>"></span><%if(segments[i].label){ %><%=segments[i].label%><%}%></li><%}%></ul>'
            });
        });
    </script>

{% endblock %}
